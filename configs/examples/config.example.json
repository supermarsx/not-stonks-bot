{
  "api_keys": {
    "alpaca": {
      "api_key": "your_alpaca_api_key_here",
      "secret_key": "your_alpaca_secret_key_here",
      "paper_trading": true,
      "base_url": "https://paper-api.alpaca.markets"
    },
    "binance": {
      "api_key": "your_binance_api_key_here",
      "secret_key": "your_binance_secret_key_here",
      "testnet": true,
      "base_url": "https://testnet.binance.vision"
    },
    "interactive_brokers": {
      "host": "127.0.0.1",
      "port": 7497,
      "client_id": 1,
      "paper_trading": true
    },
    "trading_212": {
      "api_key": "your_trading212_api_key_here",
      "practice": true,
      "base_url": "https://practice.trading212.com"
    },
    "xtb": {
      "api_key": "your_xtb_api_key_here",
      "secret_key": "your_xtb_secret_key_here",
      "demo": true,
      "server": "demo"
    },
    "degiro": {
      "username": "your_degiro_username",
      "password": "your_degiro_password",
      "mfa": false
    },
    "trade_republic": {
      "username": "your_tr_username",
      "password": "your_tr_password",
      "pin": "your_tr_pin"
    }
  },
  "trading": {
    "max_position_size": 10000,
    "max_daily_loss": 5000,
    "max_open_orders": 100,
    "risk_per_trade": 0.02,
    "stop_loss_percent": 0.05,
    "take_profit_percent": 0.10,
    "default_currency": "USD",
    "trading_hours": {
      "market_open": "09:30",
      "market_close": "16:00",
      "timezone": "America/New_York"
    }
  },
  "strategies": {
    "enabled": ["mean_reversion", "trend_following"],
    "mean_reversion": {
      "lookback_period": 20,
      "entry_threshold": 2.0,
      "exit_threshold": 0.5,
      "min_confidence": 0.75,
      "max_hold_time_days": 5
    },
    "trend_following": {
      "fast_ma_period": 10,
      "slow_ma_period": 30,
      "rsi_period": 14,
      "min_strength": 0.6,
      "momentum_threshold": 0.02
    },
    "pairs_trading": {
      "correlation_threshold": 0.8,
      "zscore_entry": 2.0,
      "zscore_exit": 0.5,
      "min_history_days": 60,
      "max_spread_percent": 0.05
    },
    "scalping": {
      "timeframe": "1m",
      "profit_target": 0.001,
      "stop_loss": 0.0005,
      "max_hold_time": 300
    }
  },
  "risk_management": {
    "enabled": true,
    "max_portfolio_risk": 0.15,
    "position_concentration_limit": 0.30,
    "sector_concentration_limit": 0.40,
    "daily_loss_limit": 0.05,
    "max_drawdown_limit": 0.20,
    "circuit_breaker_enabled": true,
    "circuit_breaker_loss_limit": 0.10,
    "consecutive_loss_limit": 3
  },
  "data_sources": {
    "primary": "broker",
    "fallback": "yahoo",
    "alphavantage": {
      "api_key": "your_alphavantage_key_here",
      "rate_limit": 5
    },
    "yahoo_finance": {
      "rate_limit": 2000
    },
    "polygon": {
      "api_key": "your_polygon_key_here"
    }
  },
  "ui": {
    "theme": "matrix",
    "refresh_rate": 1000,
    "terminal_width": 120,
    "terminal_height": 40,
    "enable_sound": true,
    "sound_file": "./sounds/alert.wav"
  },
  "notifications": {
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "your_email@gmail.com",
      "password": "your_app_password",
      "use_tls": true,
      "recipients": ["admin@example.com"]
    },
    "webhook": {
      "enabled": false,
      "url": "https://your-webhook-url.com/webhook",
      "secret": "your_webhook_secret"
    },
    "slack": {
      "enabled": false,
      "webhook_url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
      "channel": "#trading-alerts",
      "username": "TradingBot"
    }
  },
  "monitoring": {
    "health_checks": {
      "enabled": true,
      "interval": 30,
      "timeout": 10
    },
    "metrics": {
      "enabled": true,
      "prometheus_port": 8000,
      "collection_interval": 60
    },
    "system": {
      "enabled": true,
      "high_cpu_threshold": 80,
      "high_memory_threshold": 85,
      "disk_usage_threshold": 90
    }
  },
  "security": {
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256",
      "key_derivation": "PBKDF2"
    },
    "authentication": {
      "api_keys_required": true,
      "session_timeout": 3600,
      "max_login_attempts": 5,
      "lockout_duration": 900
    },
    "audit": {
      "enabled": true,
      "log_file": "logs/audit.log",
      "track_api_calls": true,
      "track_user_actions": true
    }
  },
  "performance": {
    "database": {
      "pool_size": 20,
      "connection_timeout": 30,
      "query_timeout": 60,
      "wal_mode": true
    },
    "cache": {
      "redis": {
        "enabled": false,
        "host": "localhost",
        "port": 6379,
        "password": "",
        "db": 0,
        "ttl": 3600,
        "max_size": 1024
      }
    },
    "async": {
      "max_workers": 10,
      "worker_timeout": 60,
      "queue_size": 1000
    }
  },
  "backup": {
    "retention": {
      "database_days": 365,
      "log_days": 90
    },
    "schedule": {
      "interval_hours": 24,
      "retention_count": 7
    },
    "storage": {
      "local_path": "./backups/",
      "s3": {
        "enabled": false,
        "bucket_name": "",
        "region": "us-east-1"
      }
    }
  },
  "development": {
    "debug_mode": false,
    "verbose_logging": false,
    "test_data_enabled": false,
    "demo_mode": false,
    "profiling": {
      "enabled": false,
      "output_dir": "./profiling/"
    }
  }
}