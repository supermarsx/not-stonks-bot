# Day Trading Orchestrator - Environment Variables Template
# Copy this file to '.env' and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=development                    # development, staging, production

# Logging Level
LOG_LEVEL=INFO                             # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database Configuration
DATABASE_URL=sqlite:///trading_orchestrator.db
# For PostgreSQL: postgresql://username:password@host:port/database
# For MySQL: mysql://username:password@host:port/database

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here      # Optional: Organization ID
OPENAI_MODEL=gpt-4o                       # Model to use: gpt-3.5-turbo, gpt-4, gpt-4o
OPENAI_MAX_TOKENS=4000                    # Maximum tokens per request
OPENAI_TEMPERATURE=0.7                    # Response creativity (0.0-1.0)

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229  # Model to use
ANTHROPIC_MAX_TOKENS=4000                 # Maximum tokens per request

# Local AI Models Configuration
ENABLE_LOCAL_MODELS=false                  # Enable/disable local models
LOCAL_MODEL_PATH=./models                  # Path to local models
LOCAL_MODEL_BACKEND=transformers           # Backend: transformers, ollama, lm_studio
LOCAL_MODEL_QUANTIZATION=int8              # Quantization: int8, int4, fp16

# =============================================================================
# BROKER API KEYS
# =============================================================================

# Alpaca Trading (US Securities & Crypto)
ALPACA_ENABLED=false                       # Enable/disable Alpaca integration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true                          # Use paper trading (recommended)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Binance (Crypto Trading)
BINANCE_ENABLED=false                      # Enable/disable Binance integration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true                       # Use testnet (recommended for testing)
BINANCE_BASE_URL=https://testnet.binance.vision

# Interactive Brokers (Global Markets)
IBKR_ENABLED=false                         # Enable/disable IBKR integration
IBKR_HOST=127.0.0.1                       # IBKR Gateway host
IBKR_PORT=7497                            # IBKR Gateway port
IBKR_CLIENT_ID=1                          # Client ID for IBKR connection
IBKR_PAPER=true                           # Use paper trading account

# DEGIRO (European Broker - Unofficial API)
DEGIRO_ENABLED=false                      # Enable/disable DEGIRO integration
DEGIRO_USERNAME=your_degiro_username
DEGIRO_PASSWORD=your_degiro_password
DEGIRO_MFA=false                          # Enable if using 2FA
DEGIRO_SESSION_ID=                        # Will be auto-generated if empty

# Trading 212 (European Broker)
TRADING212_ENABLED=false                  # Enable/disable Trading 212 integration
TRADING212_API_KEY=your_trading212_api_key_here
TRADING212_PRACTICE=true                  # Use practice account
TRADING212_BASE_URL=https://practice.trading212.com

# XTB (Forex & CFDs)
XTB_ENABLED=false                         # Enable/disable XTB integration
XTB_API_KEY=your_xtb_api_key_here
XTB_SECRET_KEY=your_xtb_secret_key_here
XTB_DEMO=true                             # Use demo account
XTB_SERVER=demo                           # Server: demo or real

# Trade Republic (German Broker - Unofficial API)
TR_REPUBLIC_ENABLED=false                 # Enable/disable Trade Republic integration
TR_REPUBLIC_USERNAME=your_tr_username
TR_REPUBLIC_PASSWORD=your_tr_password
TR_REPUBLIC_PIN=your_tr_pin
TR_REPUBLIC_DEVICE_ID=                    # Will be auto-generated if empty

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Position & Account Limits
MAX_POSITION_SIZE=10000                   # Maximum position size in base currency
MAX_DAILY_LOSS=5000                       # Maximum daily loss limit
MAX_OPEN_ORDERS=100                       # Maximum open orders
RISK_PER_TRADE=0.02                       # Risk per trade as percentage (2%)
STOP_LOSS_PERCENTAGE=0.05                 # Default stop loss percentage (5%)
TAKE_PROFIT_PERCENTAGE=0.10               # Default take profit percentage (10%)

# Circuit Breakers
CIRCUIT_BREAKER_ENABLED=true              # Enable/disable circuit breakers
DAILY_LOSS_LIMIT=10000                    # Daily loss circuit breaker
CONSECUTIVE_LOSS_LIMIT=3                  # Consecutive losses circuit breaker
DRAWDOWN_LIMIT=0.15                       # Maximum drawdown percentage (15%)
POSITION_CONCENTRATION_LIMIT=0.30         # Maximum position concentration (30%)

# =============================================================================
# TRADING STRATEGIES
# =============================================================================

# Strategy Selection
ENABLED_STRATEGIES=mean_reversion,trend_following,pairs_trading

# Mean Reversion Settings
MEAN_REVERSION_LOOKBACK=20                # Lookback period
MEAN_REVERSION_ENTRY_THRESHOLD=2.0        # Entry threshold (std devs)
MEAN_REVERSION_EXIT_THRESHOLD=0.5         # Exit threshold (std devs)
MEAN_REVERSION_MIN_CONFIDENCE=0.75        # Minimum AI confidence

# Trend Following Settings
TREND_FAST_MA_PERIOD=10                   # Fast moving average period
TREND_SLOW_MA_PERIOD=30                   # Slow moving average period
TREND_RSI_PERIOD=14                       # RSI period
TREND_MIN_STRENGTH=0.6                    # Minimum trend strength

# Pairs Trading Settings
PAIRS_CORRELATION_THRESHOLD=0.8           # Minimum correlation
PAIRS_ZSCORE_ENTRY=2.0                    # Z-score for entry
PAIRS_ZSCORE_EXIT=0.5                     # Z-score for exit
PAIRS_MIN_HISTORY_DAYS=60                 # Minimum history

# =============================================================================
# MARKET DATA
# =============================================================================

# Data Sources
PRIMARY_DATA_SOURCE=broker                # Primary: broker, yahoo, alphavantage
FALLBACK_DATA_SOURCE=yahoo                # Fallback data source

# Alpha Vantage (Alternative Data Source)
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# Yahoo Finance Configuration
YAHOO_FINANCE_RATE_LIMIT=2000             # Requests per minute

# =============================================================================
# USER INTERFACE
# =============================================================================

# Terminal Interface
UI_THEME=matrix                           # Theme: matrix, dark, light
UI_REFRESH_RATE=1000                      # Refresh rate in milliseconds
TERMINAL_WIDTH=120                        # Terminal width
TERMINAL_HEIGHT=40                        # Terminal height

# Dashboard Settings
DASHBOARD_ENABLE_REALTIME=true            # Enable real-time updates
DASHBOARD_CHART_HEIGHT=400                # Chart height in pixels
DASHBOARD_AUTO_REFRESH=true               # Auto-refresh charts

# Notifications
NOTIFICATIONS_ENABLED=true                # Enable notifications
TRADE_ALERTS=true                        # Trade execution alerts
RISK_ALERTS=true                         # Risk limit alerts
ERROR_ALERTS=true                        # Error notifications
SOUND_NOTIFICATIONS=true                 # Sound notifications
ALERT_SOUND_FILE=./sounds/alert.wav      # Alert sound file path

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================

# Health Checks
HEALTH_CHECK_ENABLED=true                 # Enable health checks
HEALTH_CHECK_INTERVAL=30                  # Check interval in seconds
HEALTH_CHECK_TIMEOUT=10                   # Check timeout in seconds

# Performance Metrics
METRICS_ENABLED=true                     # Enable metrics collection
PROMETHEUS_PORT=8000                     # Prometheus metrics port
METRICS_COLLECTION_INTERVAL=60           # Collection interval in seconds

# System Monitoring
MONITORING_ENABLED=true                  # Enable system monitoring
HIGH_CPU_THRESHOLD=80                   # CPU usage threshold (%)
HIGH_MEMORY_THRESHOLD=85                # Memory usage threshold (%)
DISK_USAGE_THRESHOLD=90                 # Disk usage threshold (%)

# =============================================================================
# SECURITY
# =============================================================================

# Data Encryption
ENCRYPTION_ENABLED=true                   # Enable data encryption
ENCRYPTION_ALGORITHM=AES-256              # Encryption algorithm
KEY_DERIVATION=PBKDF2                     # Key derivation method

# Authentication
API_KEYS_REQUIRED=true                    # Require API key authentication
SESSION_TIMEOUT=3600                      # Session timeout in seconds
MAX_LOGIN_ATTEMPTS=5                      # Maximum login attempts
LOCKOUT_DURATION=900                      # Account lockout duration (seconds)

# Audit Logging
AUDIT_ENABLED=true                        # Enable audit logging
AUDIT_LOG_FILE=logs/audit.log            # Audit log file path
TRACK_API_CALLS=true                      # Track API calls
TRACK_USER_ACTIONS=true                   # Track user actions

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Database Performance
DB_POOL_SIZE=20                           # Connection pool size
DB_CONNECTION_TIMEOUT=30                  # Connection timeout (seconds)
DB_QUERY_TIMEOUT=60                       # Query timeout (seconds)
DB_WAL_MODE=true                          # Enable WAL mode for SQLite

# Caching Configuration
REDIS_ENABLED=false                       # Enable Redis caching
REDIS_HOST=localhost                      # Redis host
REDIS_PORT=6379                          # Redis port
REDIS_PASSWORD=                          # Redis password (if required)
REDIS_DB=0                               # Redis database number
CACHE_TTL=3600                           # Cache TTL in seconds
MAX_CACHE_SIZE=1024                      # Maximum cache size (MB)

# Async Processing
MAX_WORKERS=10                           # Maximum worker threads
WORKER_TIMEOUT=60                        # Worker timeout (seconds)
QUEUE_SIZE=1000                          # Queue size

# =============================================================================
# EMAIL & WEBHOOK NOTIFICATIONS
# =============================================================================

# Email Configuration (for alerts and notifications)
SMTP_ENABLED=false                       # Enable email notifications
SMTP_SERVER=smtp.gmail.com               # SMTP server
SMTP_PORT=587                            # SMTP port (587 for TLS, 465 for SSL)
SMTP_USERNAME=your_email@gmail.com       # Email username
SMTP_PASSWORD=your_app_password          # Email password (use app password for Gmail)
SMTP_USE_TLS=true                        # Use TLS encryption
EMAIL_RECIPIENTS=admin@example.com,user@example.com  # Alert recipients

# Webhook Configuration
WEBHOOK_ENABLED=false                    # Enable webhook notifications
WEBHOOK_URL=https://your-webhook-url.com/webhook
WEBHOOK_SECRET=your_webhook_secret       # Webhook secret for verification

# Slack Integration
SLACK_ENABLED=false                      # Enable Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#trading-alerts            # Slack channel for alerts
SLACK_USERNAME=TradingBot                # Bot username

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development Settings
DEBUG_MODE=false                          # Enable debug mode
VERBOSE_LOGGING=false                     # Enable verbose logging
TEST_DATA_ENABLED=false                   # Enable test data generation
DEMO_MODE=false                          # Enable demo mode (no real trading)

# Profiling
ENABLE_PROFILING=false                    # Enable performance profiling
PROFILING_OUTPUT=./profiling/             # Profiling output directory

# Test Configuration
TEST_TIMEOUT=30                           # Test timeout (seconds)
TEST_DATABASE_URL=sqlite:///test_trading_orchestrator.db  # Test database

# =============================================================================
# BACKUP & DATA RETENTION
# =============================================================================

# Data Retention
DATABASE_RETENTION_DAYS=365               # Database retention period
LOG_RETENTION_DAYS=90                     # Log retention period
BACKUP_INTERVAL_HOURS=24                  # Backup interval in hours
BACKUP_RETENTION_COUNT=7                  # Number of backups to retain

# Backup Storage
BACKUP_STORAGE_LOCAL=./backups/           # Local backup directory
BACKUP_STORAGE_S3_ENABLED=false           # Enable S3 backup storage
AWS_ACCESS_KEY_ID=                        # AWS access key
AWS_SECRET_ACCESS_KEY=                    # AWS secret key
AWS_BUCKET_NAME=                          # S3 bucket name
AWS_REGION=us-east-1                      # AWS region

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# Machine Learning
ML_MODEL_RETRAIN_INTERVAL=168             # Model retrain interval (hours)
ML_FEATURE_STORE_ENABLED=false            # Enable feature store
ML_AUTO_RETRAIN=true                      # Auto-retrain models

# API Rate Limiting
RATE_LIMITING_ENABLED=true               # Enable rate limiting
RATE_LIMIT_WINDOW=60                     # Rate limit window (seconds)
RATE_LIMIT_REQUESTS=100                  # Rate limit requests per window

# Load Balancing
LOAD_BALANCING_ENABLED=false              # Enable load balancing
WORKER_INSTANCES=4                       # Number of worker instances
HEALTH_CHECK_PATH=/health                # Health check endpoint

# =============================================================================
# NOTES
# =============================================================================

# 1. Always start with PAPER trading mode and testnet environments
# 2. Never share your API keys or store them in version control
# 3. Regularly rotate your API keys for security
# 4. Set appropriate risk limits before enabling live trading
# 5. Monitor the system closely when first enabling live trading
# 6. Keep backups of your configuration and data
# 7. Test all configurations in a paper environment first
# 8. Review and understand all security settings before production use