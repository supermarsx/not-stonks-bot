# Binance Configuration Example
# Copy this configuration to your main config.json file

{
  "brokers": {
    "binance": {
      "enabled": true,  // Set to true to enable Binance integration
      
      "authentication": {
        "api_key": "YOUR_BINANCE_API_KEY_HERE",
        "secret_key": "YOUR_BINANCE_SECRET_KEY_HERE",
        "testnet": true  // Use testnet for testing
      },
      
      "endpoints": {
        "base_url": "https://testnet.binance.vision",  // Testnet for testing
        "real_url": "https://api.binance.com",         // Real trading
        "websocket": "wss://testnet.binance.vision/ws" // WebSocket endpoint
      },
      
      "rate_limits": {
        "requests_per_minute": 1200,
        "orders_per_second": 10,
        "weight_per_minute": 6000
      },
      
      "trading_settings": {
        "default_order_type": "limit",
        "default_time_in_force": "GTC",
        "default_quantity_type": "by_quote",
        "min_notional": 10.0,  // Minimum order value
        "max_notional": 900000.0  // Maximum order value
      },
      
      "symbols": {
        "spot_trading": {
          "enabled": true,
          "base_assets": ["BTC", "ETH", "BNB", "ADA", "DOT", "LINK"],
          "quote_assets": ["USDT", "BUSD", "USDC"],
          "restricted_pairs": []  // Pairs to avoid
        },
        "futures_trading": {
          "enabled": false,  // Enable for futures trading
          "leverage": 1,
          "margin_type": "ISOLATED",
          "contract_types": ["USDT-M", "COIN-M"]
        }
      },
      
      "order_types": {
        "limit": {
          "enabled": true,
          "maker_commission": 0.001,
          "taker_commission": 0.001
        },
        "market": {
          "enabled": true,
          "maker_commission": 0.001,
          "taker_commission": 0.001
        },
        "stop_loss": {
          "enabled": true,
          "stop_price_required": true
        },
        "take_profit": {
          "enabled": true,
          "stop_price_required": true
        },
        "oco": {
          "enabled": true,
          "description": "One-Cancels-the-Other orders"
        }
      },
      
      "market_data": {
        "streaming": {
          "enabled": true,
          "symbols": ["BTCUSDT", "ETHUSDT", "BNBUSDT"],
          "intervals": ["1m", "5m", "15m", "1h", "4h", "1d"]
        },
        "klines": {
          "enabled": true,
          "limit": 1000,
          "intervals": ["1m", "3m", "5m", "15m", "30m", "1h", "2h", "4h", "6h", "8h", "12h", "1d", "3d", "1w", "1M"]
        },
        "depth": {
          "enabled": true,
          "limit": 100  // Order book depth
        },
        "trades": {
          "enabled": true,
          "limit": 500
        }
      },
      
      "filters": {
        "price_filter": {
          "enabled": true,
          "min_price": 0.00001000,
          "max_price": 1000000.00000000,
          "tick_size": 0.00001000
        },
        "lot_size": {
          "enabled": true,
          "min_qty": 0.00001000,
          "max_qty": 9000.00000000,
          "step_size": 0.00001000
        },
        "notional": {
          "enabled": true,
          "min_notional": 10.0
        }
      },
      
      "features": {
        "spot_trading": true,
        "futures_trading": false,
        "savings": false,
        "lending": false,
        "mining": false,
        "sub_account": false
      },
      
      "security": {
        "ip_whitelist": false,
        "ip_list": [],
        "enable_withdrawals": false,  // Keep disabled for safety
        "enable_internal_transfer": false
      },
      
      "compliance": {
        "aml_checks": true,
        "country_restrictions": [
          "US", "MY", "CN", "CU", "IR", "IQ", "LB", "SY", "SD"
        ],
        "kyc_required": false
      },
      
      "webhooks": {
        "enabled": false,
        "url": "https://your-domain.com/webhooks/binance",
        "events": ["executionReport", "outboundAccountPosition", "listStatus"]
      }
    }
  }
}