# Alpaca Trading Configuration Example
# Copy this configuration to your main config.json file

{
  "brokers": {
    "alpaca": {
      "enabled": true,  // Set to true to enable Alpaca integration
      
      "authentication": {
        "api_key": "YOUR_ALPACA_API_KEY_HERE",
        "secret_key": "YOUR_ALPACA_SECRET_KEY_HERE",
        "environment": "paper"  // "paper" or "live"
      },
      
      "endpoints": {
        "base_url": "https://paper-api.alpaca.markets",  // Paper trading
        "data_url": "https://data.alpaca.markets",      // Market data
        "version": "v2"
      },
      
      "rate_limits": {
        "requests_per_minute": 200,
        "burst_limit": 50,
        "cool_down_seconds": 1
      },
      
      "trading_settings": {
        "default_order_type": "market",
        "default_time_in_force": "day",
        "fractional_shares": true,
        "min_order_size": 1.0,
        "max_order_size": 1000000.0
      },
      
      "market_data": {
        "real_time_streaming": true,
        "subscription": {
          "stocks": true,
          "crypto": true,
          "forex": false
        },
        "data_feed": "iex"  // "iex" or "sip"
      },
      
      "supported_assets": {
        "stocks": {
          "enabled": true,
          "exchanges": ["NYSE", "NASDAQ", "AMEX"],
          "min_price": 0.01,
          "max_price": 1000000.0
        },
        "crypto": {
          "enabled": true,
          "pairs": ["BTCUSD", "ETHUSD", "LTCUSD", "BCHUSD"],
          "fiat_currencies": ["USD"]
        },
        "options": {
          "enabled": false  // Enable if you have options approval
        }
      },
      
      "order_types": {
        "market": {
          "enabled": true,
          "commission": 0.0,
          "description": "Market orders execute immediately at current market price"
        },
        "limit": {
          "enabled": true,
          "commission": 0.0,
          "description": "Limit orders execute only at specified price or better"
        },
        "stop": {
          "enabled": true,
          "commission": 0.0,
          "description": "Stop orders become market orders when triggered"
        },
        "stop_limit": {
          "enabled": true,
          "commission": 0.0,
          "description": "Stop limit orders become limit orders when triggered"
        }
      },
      
      "features": {
        "short_selling": true,
        "margin_trading": false,
        "dollar_cost_averaging": true,
        "recurring_orders": false,
        "after_hours_trading": false,
        "pre_market_trading": false
      },
      
      "compliance": {
        "pattern_day_trader_rule": true,
        "wash_sale_prevention": true,
        "risk_checks": true,
        "position_limits": true
      },
      
      "webhooks": {
        "enabled": false,
        "url": "https://your-domain.com/webhooks/alpaca",
        "events": ["trade", "order", "account", "position"]
      }
    }
  }
}